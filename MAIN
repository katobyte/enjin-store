/*M_SHOPPING PADDING - This section changes the padding to 0 for the store module*/
.m_shopping {
    padding: 0;   
}


/*DESCRIPTION EDIT - This section hides any descriptions*/ 
.m_shopping .shopping-main-description {
    display: none;
}

.m_shopping .shopping-description {
	display: none;
}

/*HEADER EDIT - This section changes the header height, padding, background & font*/ 
.m_shopping .shopping-header {
    height: 40px;
    padding: 20px;
    background: #cf4f4f;
}

.section-width-large .m_shopping .shopping-title {
    font-family: 'Raleway', sans-serif;
    color: #ffffff; 
}

/*SHOPPING MENU EDIT - This section changes the look and positioning of the Shopping Menu*/ 

.m_shopping.large-mode .shopping-menu {
    background: #2b2a2b;
    text-align: center;
    display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: flex;
	justify-content: center;
}

.m_shopping .shopping-menu-item {
    margin: 0;
    border: none;
    background: none;
}

.m_shopping .shopping-menu-item>a {
    display: block;
    padding: 15px 20px;
    font-family: 'Montserrat', sans-serfif;
    border: none !important;
	color: #cf4f4f;
	border-radius: 0;
}

